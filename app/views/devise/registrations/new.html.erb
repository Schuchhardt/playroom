<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "Nombre completo" %><br />
    <%= f.text_field :name, required: true, placeholder: "Ingrese nombre completo" %>
  </div>

  <div class="field">
    <%= f.label :email, "Correo" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, placeholder: "Ingrese correo" %>
  </div>

  <div class="field">
    <%= f.label :rut, "RUT" %><br />
    <%= f.text_field :rut, placeholder: "Ingrese RUT"%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> cáracteres mínimos)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", required: true, placeholder: "Ingrese contraseña" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, placeholder: "Repita contraseña" %>
  </div>

  <div class="field">
    <%= f.label :rbd, "RBD Colegio" %><br />
    <%= f.text_field :rbd, required: true, placeholder: "Ingrese RBD del colegio a que pertenece" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
